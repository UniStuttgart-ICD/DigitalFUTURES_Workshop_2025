# ROS-Free Robot Voice Agent Configuration
# =========================================
# Copy this file to .env and set your values

# OpenAI Configuration (Required)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Robot Configuration
UR_ROBOT_IP=192.168.56.101

# Voice Agent Configuration
TEXT_ONLY_MODE=false
ENABLE_TEXT_INPUT=true
ENABLE_INTERRUPTION=true
FEEDBACK_PREVENTION=true
THREADED_TOOLS=true
DEBUG=false
ENABLE_LOGGING=true

# Audio Configuration
AUDIO_THRESHOLD=0.005
SILENCE_AFTER_SPEAKING=0.8
POST_SPEECH_DELAY=0.8

# Wake Word for Robot Safety
WAKEWORD=timbra 